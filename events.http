  "startDate": "2025-08-04T09:00:00.000Z",
  "endDate": "2025-08-04T10:00:00.000Z",
  "type": "class",
  "category": "Flexibilidad",
  "color": "#3B82F6",
  "location": "Estudio Principal",
  "maxParticipants": 12,
  "instructor": "Sarah",
  "price": 3000,
  "isRecurring": true,
  "recurringDays": [1, 3]
}

